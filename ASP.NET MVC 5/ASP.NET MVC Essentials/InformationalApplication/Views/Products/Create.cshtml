@model InformationalApplication.ViewModels.ProductInputModel
@using InformationalApplication.Models

@{
    ViewBag.Title = "Create Product";
}

<h2>Create Product</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(p => p.Name, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(p => p.CategoryId, new { @class = "col-sm-2 control-label" })
                    @Html.Action("GetProductCategories")
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Add">
                    </div>
                </div>
            }
        </div>
    </div>
</div>

